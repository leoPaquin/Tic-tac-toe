<Window x:Class="Tic_tac_tie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tic_tac_tie"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Tic Tac Toe"
                   FontSize="26"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,10"/>


            <Grid Margin="10" Width="300" Height="300" x:Name="GridPrincipale">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button x:Name="B1" Grid.Row="0" Grid.Column="0" FontSize="36" Margin="5"/>
                <Button x:Name="B2" Grid.Row="0" Grid.Column="1" FontSize="36" Margin="5"/>
                <Button x:Name="B3" Grid.Row="0" Grid.Column="2" FontSize="36" Margin="5"/>

                <Button x:Name="B4" Grid.Row="1" Grid.Column="0" FontSize="36" Margin="5"/>
                <Button x:Name="B5" Grid.Row="1" Grid.Column="1" FontSize="36" Margin="5"/>
                <Button x:Name="B6" Grid.Row="1" Grid.Column="2" FontSize="36" Margin="5"/>

                <Button x:Name="B7" Grid.Row="2" Grid.Column="0" FontSize="36" Margin="5"/>
                <Button x:Name="B8" Grid.Row="2" Grid.Column="1" FontSize="36" Margin="5"/>
                <Button x:Name="B9" Grid.Row="2" Grid.Column="2" FontSize="36" Margin="5"/>
            </Grid>

            <Button Content="Recommencer"
                x:Name="Reccomencer_Partie"
                Width="150"
                Margin="10"
                Padding="5" Click="Reccomencer_Partie_Click"/>

        </StackPanel>
    </Grid>
</Window>
